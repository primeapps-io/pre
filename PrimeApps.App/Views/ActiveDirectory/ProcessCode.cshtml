		</div>
	</div>
	@*Scripts.Render("~/bundles-js/auth")*@
	<script src="~/bundles-js/auth.js"></script>
	<script type="text/javascript">
        $(document).ready(function () {
            var error = "@ViewBag.Error";
            if (error === "userExist") {
                swal({
                    title: "@Html.Raw(PrimeApps.App.Resources.Auth.Resource.ProcessCodeErrorTitle)",
                    text: "@Html.Raw(PrimeApps.App.Resources.Auth.Resource.ProcessCodeErrorMessage)",
                    icon: "error",
                    button: "@Html.Raw(PrimeApps.App.Resources.Auth.Resource.Ok)",
                }).then(function() {
                    window.open('', '_self', ''); window.close();
                });
            } else if (error === "emailNotMatch") {
                swal({
                    title: "@Html.Raw(PrimeApps.App.Resources.Auth.Resource.EmailNotMatchTitle)",
                    text: "@Html.Raw(PrimeApps.App.Resources.Auth.Resource.EmailNotMatchContent)",
                    icon: "error",
                    button: "@Html.Raw(PrimeApps.App.Resources.Auth.Resource.Ok)",
                }).then(function() {
                    window.open('', '_self', ''); window.close();
                });
            } else if (error === "accessDenied") {
                window.open('', '_self', ''); window.close();
            } else {
                swal({
                    title: "@Html.Raw(PrimeApps.App.Resources.Auth.Resource.ProcessCodeTitle)",
                    text: "@Html.Raw(PrimeApps.App.Resources.Auth.Resource.ProcessCodeMessage)",
                    icon: "success",
                    button: "@Html.Raw(PrimeApps.App.Resources.Auth.Resource.Ok)",
                }).then(function() {
                    window.open('', '_self', ''); window.close();
                });
            }
        });
	</script>
</body>
</html>
