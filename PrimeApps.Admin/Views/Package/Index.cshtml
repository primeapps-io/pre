@using PrimeApps.Model.Common.Organization
@{
    var organizations = ViewBag.Organizations as List<OrganizationModel>;
    var apps = organizations?.FirstOrDefault(x => x.Id == int.Parse(ViewBag.ActiveOrganizationId))?.Apps;
}
<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
    <div class="container-fluid">
        <div class="header-body">
            @if (ViewBag.lastVersion != null)
            {
                <div class="row" title="Publish for Click!">
                    <div class="col-xl-3 col-lg-6 b-card">
                        <div class="card card-stats mb-4 mb-xl-0" style="cursor:pointer;">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h5 class="card-title text-uppercase text-muted mb-0"> @ViewBag.CurrentApp.Label</h5>

                                        <p class="mt-3 mb-0 text-muted text-sm">
                                            <span class="text-nowrap">
                                                Last Release Version : @ViewBag.lastVersion.Version
                                            </span>
                                        </p>
                                    </div>
                                    <div class="col-auto">
                                        <div class="icon icon-shape text-white rounded-circle shadow" style="background-color:orange">
                                            <i class="ni ni-spaceship" title="Publish"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
