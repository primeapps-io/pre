@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer



@section scripts {
    <script>
        $(document).ready(function () {
            var showError = function (error) {
                swal({
                    title: "@Localizer[ViewBag.Error + "Title"]",
                    text: "@Localizer[ViewBag.Error + "Content"]",
                    type: "error",
                    button: "@Localizer["Ok"]",
                });
            }
            var showSuccess = function (success) {
                swal({
                    title: "@Localizer[ViewBag.Success + "Title"]",
                    text: "@Localizer[ViewBag.Success + "Content"]",
                    type: "success",
                    button: "@Localizer["Ok"]",
                });
            }

            @if (!string.IsNullOrEmpty(ViewBag.Error)) {
                @:showError();
            }

            @if (!string.IsNullOrEmpty(ViewBag.Success)) {
                @:showSuccess();
            }
        });
    </script>
}