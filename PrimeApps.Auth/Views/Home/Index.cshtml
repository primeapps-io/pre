@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer



@section scripts {
    <script>
	    $(document).ready(function() {
            if ("@ViewBag.Error" == "ConfirmEmailError") {
                swal({
                    title: "@Localizer[ViewBag.Error + "Title"]",
                    text: "@Localizer[ViewBag.Error + "Content"]",
                    type: "error",
                    button: "@Localizer["Ok"]",
                }).then((result) => {
                    console.log(result);
                });
            }
        });
    </script>
}